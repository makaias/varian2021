{
  "kind": "collectionType",
  "collectionName": "treatment_plans",
  "info": {
    "name": "TreatmentPlan",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "patientName": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "regex": "^[+]?[0-9]+"
    },
    "patientDOB": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "primaryCareProvider": {
      "type": "string"
    },
    "surgeon": {
      "type": "string"
    },
    "radiationOncologist": {
      "type": "string"
    },
    "medicalOncologyst": {
      "type": "string"
    },
    "otherProviders": {
      "type": "json"
    },
    "cancerType": {
      "type": "string"
    },
    "diagnosysDate": {
      "type": "integer",
      "min": 1900
    },
    "stage": {
      "type": "string"
    },
    "surgery": {
      "type": "boolean"
    },
    "surgeryDate": {
      "type": "json"
    },
    "surgicalProcedure": {
      "type": "richtext"
    },
    "radiation": {
      "type": "boolean"
    },
    "bodyAreaTreated": {
      "type": "string"
    },
    "endYear": {
      "type": "integer",
      "min": 1900
    },
    "systemicTherapy": {
      "type": "boolean"
    },
    "agentsUsed": {
      "type": "json"
    },
    "symptomsSideEffects": {
      "type": "boolean"
    },
    "symptomsSideEffectsDescription": {
      "type": "richtext"
    },
    "needOngoingTreatment": {
      "type": "boolean"
    },
    "additionalTreatments": {
      "type": "json"
    },
    "clinicVisits": {
      "type": "json"
    },
    "survillanceTests": {
      "type": "json"
    },
    "otherComments": {
      "type": "richtext"
    },
    "preparedBy": {
      "type": "string"
    },
    "deliveredOn": {
      "type": "date"
    },
    "user": {
      "via": "treatment_plans",
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
